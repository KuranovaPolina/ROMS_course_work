<mujoco>
  <compiler angle="radian" coordinate="local"/>
  <option timestep="0.001" gravity="0 0 -9.81"/>
  
  <worldbody>
    <!-- Базовая точка (фиксированная) -->
    <body name="base" pos="0 0 0">
      <geom type="box" size="0.1 0.1 0.01" rgba="0.8 0.8 0.8 1"/>
      
      <!-- Первое звено (фиксированное к основанию) -->
      <body name="link1" pos="0 0 0">
        <joint name="joint1" type="hinge" axis="0 0 1" pos="0 0 0"/>
        <geom type="capsule" fromto="0 0 0 0.2 0 0" size="0.02" rgba="1 0 0 1"/>
        
        <!-- Точка для отслеживания траектории (на месте сочленения первого и второго звена) -->
        <site name="tracker" pos="0.2 0 0" size="0.01" rgba="1 0 1 1"/>
        
        <!-- Второе звено -->
        <body name="link2" pos="0.2 0 0">
          <joint name="joint2" type="hinge" axis="0 0 1" pos="0 0 0"/>
          <geom type="capsule" fromto="0 0 0 0.2 0 0" size="0.02" rgba="0 1 0 1"/>
          
          <!-- Третье звено -->
          <body name="link3" pos="0.2 0 0">
            <joint name="joint3" type="hinge" axis="0 0 1" pos="0 0 0"/>
            <geom type="capsule" fromto="0 0 0 0 0.2 0" size="0.02" rgba="0 0 1 1"/>
            
            <!-- Четвертое звено (замыкает контур) -->
            <body name="link4" pos="0 0.2 0">
              <joint name="joint4" type="hinge" axis="0 0 1" pos="0 0 0"/>
              <geom type="capsule" fromto="0 0 0 -0.2 -0.2 0" size="0.02" rgba="1 1 0 1"/>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <!-- Привод на первом шарнире -->
    <motor joint="joint1" ctrlrange="-10 10" gear="1"/>
  </actuator>
</mujoco>
